<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyQuizMobile.VeranstaltungenVerwaltenPage"
             Title="Veranstaltungen verwalten"
             Padding="5">
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
      <SearchBar x:Name="searchBar" Placeholder="Suche" HorizontalOptions="FillAndExpand" VerticalOptions="Start"></SearchBar>
      <ListView x:Name="listView" ItemsSource="{Binding Groups}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding DisplayText}"></TextCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      <Button x:Name="addButton" Text="Hinzufügen" HorizontalOptions="CenterAndExpand" VerticalOptions="End"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>