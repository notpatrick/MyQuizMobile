<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyQuizMobile"
             x:Class="MyQuizMobile.AbstimmungStartenPage"
             Title="Abstimmung starten">
  <ContentPage.Resources>
    <ResourceDictionary>
        <local:PersonenbezogenConverter x:Key="PersonenbezogenConverter"/>
      <local:SendButtonColorConverter x:Key="SendButtonColorConverter" />
    </ResourceDictionary>
  </ContentPage.Resources>

  <ContentPage.Content>
    <StackLayout>
      <ListView x:Name="listView" ItemsSource="{Binding OptionCollection}" VerticalOptions="Fill">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding ItemType}" Detail="{Binding DisplayText}" TextColor="#212121" DetailColor="#616161"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      <StackLayout HorizontalOptions="Fill" VerticalOptions="EndAndExpand" Padding="10">
        
        <Grid HorizontalOptions="FillAndExpand" >
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
          </Grid.RowDefinitions>
          <Switch x:Name="personenbezogenSwitch" HorizontalOptions="FillAndExpand" IsToggled="False" Grid.Column="0" Grid.Row="0"></Switch>
          <Label Text="Personenbezogene Fragen" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" HorizontalOptions="Start" Grid.Column="1" Grid.Row="0"/>
          <Entry x:Name="timeEntry" Text="{Binding TimeInSeconds}" Keyboard="Numeric" HorizontalTextAlignment="End" HorizontalOptions="FillAndExpand" Grid.Column="0" Grid.Row="1"/>
          <Label Text="Sekunden pro Frage" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" HorizontalOptions="Start" Grid.Column="1" Grid.Row="1"/>
        </Grid>
        <Button x:Name="weiterButton" Text="{Binding IsPersonenbezogen, Converter={StaticResource PersonenbezogenConverter}}" HorizontalOptions="FillAndExpand" IsEnabled="{Binding CanSend}" BackgroundColor="{Binding CanSend, Converter={StaticResource SendButtonColorConverter}}"></Button>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
