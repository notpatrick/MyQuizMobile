<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyQuizMobile"
             x:Class="MyQuizMobile.VotingStartPage"
             Title="Abstimmung starten"
             Padding="5">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listView" ItemsSource="{Binding ItemCollection}" VerticalOptions="Fill">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding DisplayText}" Detail="{Binding DetailText}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout HorizontalOptions="Fill" VerticalOptions="EndAndExpand">
                <Grid HorizontalOptions="FillAndExpand" RowSpacing="20" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Text="Personenbezogene Fragen" HorizontalTextAlignment="End"
                           VerticalTextAlignment="Center" HorizontalOptions="End" Grid.Column="0" Grid.Row="0" />
                    <Switch x:Name="personenbezogenSwitch" HorizontalOptions="Start"
                            IsToggled="{Binding IsPersonal}" Grid.Column="1" Grid.Row="0"
                            IsEnabled="{Binding GroupHasSingleTopics}" />
                    <Label Text="Sekunden pro Frage" HorizontalTextAlignment="End" VerticalTextAlignment="Center"
                           HorizontalOptions="End" Grid.Column="0" Grid.Row="1" />

                    <Entry x:Name="timeEntry" Text="{Binding TimeInSeconds}" Keyboard="Numeric"
                           HorizontalTextAlignment="Start" HorizontalOptions="FillAndExpand" Grid.Column="1"
                           Grid.Row="1" />

                </Grid>
                <Button x:Name="weiterButton" Text="Weiter" HorizontalOptions="FillAndExpand"
                        IsEnabled="{Binding CanSend}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>